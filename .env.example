# Database Configuration
MONGODB_URI=mongodb://localhost:27017/gofright
# For production: mongodb+srv://username:password@cluster.mongodb.net/gofright

# JWT Secret (Change this to a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=GoFright System <noreply@gofright.com>

# SMS Configuration (Twilio - Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
PUBLIC_APP_NAME=GoFright
PUBLIC_APP_URL=http://localhost:5173
NODE_ENV=development

# Admin Account (Default)
DEFAULT_ADMIN_EMAIL=admin@gofright.com
DEFAULT_ADMIN_PASSWORD=Admin@123456

# Payment Configuration (Optional)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_SECRET=your-payment-api-secret

# Report Generation
REPORTS_OUTPUT_DIR=./reports
