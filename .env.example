# ================================
# GoFright Environment Variables
# ================================
# Copy this file to .env and fill in your actual values

# ================================
# MongoDB Database Configuration
# ================================
# Get this from MongoDB Atlas: https://cloud.mongodb.com/
# Format: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/
MONGO_DB_NAME=goFright

# For local development (MongoDB locally installed):
# MONGODB_URI=mongodb://localhost:27017/gofright

# ================================
# JWT Authentication
# ================================
# Generate a secure random string (min 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ================================
# Maps Configuration
# ================================
# Now using OpenStreetMap via Leaflet.js (free, no API key required!)
# No configuration needed - maps work out of the box

# ================================
# Node Environment
# ================================
# Use "development" for local, "production" for deployed app
NODE_ENV=development

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=GoFright System <noreply@gofright.com>

# SMS Configuration (Twilio - Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
PUBLIC_APP_NAME=GoFright
PUBLIC_APP_URL=http://localhost:5173
NODE_ENV=development

# Admin Account (Default)
DEFAULT_ADMIN_EMAIL=admin@gofright.com
DEFAULT_ADMIN_PASSWORD=Admin@123456

# Payment Configuration (Optional)
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_API_SECRET=your-payment-api-secret

# Report Generation
REPORTS_OUTPUT_DIR=./reports
